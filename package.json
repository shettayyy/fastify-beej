{
  "name": "fastify-beej",
  "version": "0.0.1",
  "description": "A boilerplate to create GraphQL APIs using fastify.",
  "main": "build/index.js",
  "repository": "https://github.com/rashtay/fastify-beej.git",
  "author": "Rahul Shetty <shettyrahul8june@gmail.com>",
  "license": "MIT",
  "scripts": {
    "build": "rimraf ./build && tsc",
    "start": "npm run build && node build/index.js",
    "start:dev": "ts-node-dev --poll --clear --respawn --transpile-only --inspect=0.0.0.0:9229 ./src/index.ts",
    "docker:run-dev": "docker-compose -f docker-compose.dev.yml up",
    "docker:run-dev-bg": "docker-compose -f docker-compose.dev.yml up -d",
    "docker:build-dev": "docker-compose -f docker-compose.dev.yml up --build",
    "docker:build-dev-bg": "docker-compose -f docker-compose.dev.yml up --build -d",
    "docker:stop": "docker-compose down --remove-orphans",
    "docker:clean": "docker system prune -af",
    "prepare": "husky install"
  },
  "dependencies": {
    "fastify": "^3.20.2",
    "source-map-support": "^0.5.19"
  },
  "devDependencies": {
    "@types/node": "^16.6.2",
    "@types/redis": "^2.8.31",
    "@typescript-eslint/eslint-plugin": "^4.29.2",
    "@typescript-eslint/parser": "^4.29.2",
    "eslint": "^7.32.0",
    "eslint-config-prettier": "^8.3.0",
    "eslint-config-standard": "^16.0.3",
    "eslint-plugin-import": "^2.24.1",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-prettier": "^3.4.0",
    "eslint-plugin-promise": "^5.1.0",
    "husky": ">=6",
    "lint-staged": ">=10",
    "prettier": "^2.3.2",
    "rimraf": "^3.0.2",
    "ts-node-dev": "^1.1.8",
    "typescript": "^4.3.5"
  },
  "lint-staged": {
    "*.{js,ts}": "eslint --cache --fix",
    "*.{js,ts,css,md}": "prettier --write"
  }
}
